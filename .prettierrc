{
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": true,
    "jsxBracketSameLine": true,
    "printWidth": 120,
    "useTabs": false,
    "tabWidth": 4,
    "arrowParens": "always",
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.pug",
            "options": {
                "parser": "pug",
                "singleQuote": true,
                "tabWidth": 2
            }
        }
    ]
}
